<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.vegadvisor.client.DetalleEventoActivity"
        tools:showIn="@layout/activity_detalle_evento">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- Asistir a evento -->

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asistiré"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"/>

        </LinearLayout>

        <!-- Nombre evento -->

        <!-- Tipo Evento -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tipo_evento"
            android:textColor="@color/wallet_link_text_light"/>

        <TextView
            android:id="@+id/tipo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tipo_evento"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <!-- Fecha de evento -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha_evento"
            android:textColor="@color/wallet_link_text_light"/>

        <TextView
            android:id="@+id/fecha_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Horario Evento -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hora_evento"
            android:textColor="@color/wallet_link_text_light"/>

        <!-- Hora comienzo evento -->
        <TextView
            android:id="@+id/comienzo_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="time"
            android:singleLine="true"/>

        <!-- Direccion Evento -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direccion"
            android:textColor="@color/wallet_link_text_light"/>

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/direccion"
            android:singleLine="true"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <!-- Descripción evento -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descripcion"
            android:textColor="@color/wallet_link_text_light"/>

        <TextView
            android:id="@+id/descripcion_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/descripcion"
            android:inputType="textCapSentences"
            android:lines="3"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <!-- Mapa de google -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ubicacion"
            android:textColor="@color/wallet_link_text_light"/>

        <fragment
            android:id="@+id/ubicacion"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/comentarios"
            android:textColor="@color/wallet_link_text_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/comentarios_otros_usuarios"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>
</ScrollView>